{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "problemMatcher": {
        "base": "$msCompile",
        "source": "dotnet",
        "pattern": {
            "regexp": "^([^\\\\s].*)\\((\\d+,\\d+)\\):\\s+(error|warning|message)\\s+(.*):\\s+(.*)$",
            "file": 1,
            "location": 2,
            "message": 5,
            "severity": 3,
            "code": 4
        }
    },
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "args": [
                "build",
                "${workspaceFolder}/OOs.Common.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ]
        },
        {
            "label": "Run Tests",
            "detail": "Runs all unit-tests in this solution",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/OOs.Common.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ]
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/OOs.Common.sln"
            ]
        }
    ]
}